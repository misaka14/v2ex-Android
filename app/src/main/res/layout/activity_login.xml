<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"

    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/icon_close"
            android:background="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登陆v2ex"
            android:textColor="#fff"
            android:textSize="22sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="57dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_username_shape"
            >

            <ImageView
                style="@style/LoginLeftImageViewTheme"
                android:src="@mipmap/login_username"
                />

            <EditText
                android:id="@+id/et_username"
                style="@style/LoginEditTextTheme"
                android:hint="用户名"
                />

            <ImageButton
                style="@style/LoginRightImageButtonTheme"
                android:src="@mipmap/login_bottomarrow"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@null"
            >

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_password_shape"
            >

            <ImageView
                style="@style/LoginLeftImageViewTheme"
                android:src="@mipmap/login_password"
                />

            <EditText
                android:id="@+id/et_password"
                style="@style/LoginEditTextTheme"
                android:hint="密码"
                />

            <ImageButton
                style="@style/LoginRightImageButtonTheme"
                android:src="@mipmap/login_showpwd"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:text="登陆"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/login_loginbtn_shape"
        />


</LinearLayout>