<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#28ad54"
                >

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/topic_avatar_normal"
                    />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_marginLeft="8dp"
                    android:text="misaka14"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/tv_replyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_avatar"
                    android:layout_alignLeft="@+id/tv_author"
                    android:text="3小时51分钟前,344次点击"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/tv_node"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Node.js"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/home_topic_node_shape"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_avatar"
                    android:layout_marginTop="8dp"
                    android:text="V8 Release 5.4"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <WebView
                android:id="@+id/wv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </WebView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>