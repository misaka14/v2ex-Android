<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--
        android:id="@+id/rb_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="更多"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            android:drawableTop="@mipmap/ic_bottomtabbar_more"
            android:button="@null"
            android:gravity="center"
    -->
    <style name="TabBarTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/txt_tabbar_selector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!--
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="密码"
                android:background="@null"
                android:textCursorDrawable="@drawable/edittext_cursor_shape"
                />
    -->
    <style name="LoginEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_shape</item>
    </style>

    <!--
        android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/login_showpwd"
                android:background="@null"
                android:scaleType="fitXY"
    -->
    <style name="LoginRightImageButtonTheme">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--
        android:layout_width="20dp"
                android:layout_height="19dp"
                android:src="@mipmap/login_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
    -->
    <style name="LoginLeftImageViewTheme">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--
        android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ib_collection"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:scaleType="centerCrop"
    -->
    <style name="TopicDetailImageButtonTheme">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--
        android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#19666666"
    -->
    <style name="MoreSettingVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#19666666</item>
    </style>

    <style name="MoreSettingHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#19666666</item>
    </style>

    <style name="MoreSettingPlaceHolderView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--
            <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="特别关注"
                    android:drawableTop="@mipmap/mine_follow"

                    />

    -->
    <style name="MoreSettingButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@null</item>
    </style>

    <!--
        android:layout_width="78dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/view_null"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:background="@drawable/more_login_btn_shape"
            android:textColor="@color/AppColor"
            android:text="登陆"
    -->
    <style name="MoreHeaderButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
